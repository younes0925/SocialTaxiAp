<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    tools:context="com.example.younes.socialtaxi.StartActivity"
    >


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:text="Social Taxi"
        android:textColor="#5F6A6A"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/loginEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:text="Log In"
        android:textColor="#5F6A6A"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/loginEmail"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_above="@+id/loginPassword"
        android:layout_alignStart="@+id/loginPassword"
        android:layout_marginBottom="23dp"
        android:background="#66000000"
        android:ems="10"
        android:hint="Email..."
        android:textColorHint="#ccffffff"
        android:inputType="textEmailAddress"
        android:paddingLeft="10dp"
        android:textStyle="bold"
        android:textColor="#ccffffff" />


    <EditText
        android:id="@+id/loginPassword"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/loginCheckbox"
        android:layout_alignStart="@+id/loginCheckbox"
        android:layout_marginBottom="52dp"
        android:background="#66000000"
        android:ems="10"
        android:hint="Password..."
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textStyle="bold"
        android:textColor="#ccffffff"
        android:textColorHint="#ccffffff"/>

    <CheckBox
        android:id="@+id/loginCheckbox"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/loginbtnSignIn"
        android:layout_centerVertical="true"
        android:width="220dp"
        android:background="#66000000"
        android:checked="true"
        android:text="Keep me logged in "
        android:textColor="#ccffffff"
        android:textColorLink="@android:color/background_light"
        android:textStyle="bold" />

    <Button
        android:id="@+id/loginbtnSignIn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginCheckbox"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:width="220dp"
        android:background="#66000000"
        android:text="Sign In"
        android:textColor="#ccffffff"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/loginbtnCreatAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="27dp"
        android:layout_marginStart="15dp"
        android:width="150dp"
        android:background="#66000000"
        android:text="Create an account"
        android:textColor="#ccffffff"
        />

    <Button
        android:id="@+id/loginbtnFOrgetPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/loginbtnCreatAccount"
        android:layout_alignBottom="@+id/loginbtnCreatAccount"
        android:layout_toEndOf="@+id/loginbtnCreatAccount"
        android:layout_marginLeft="33dp"
        android:width="150dp"
        android:background="#66000000"
        android:text="Forgot Password"
        android:textColor="#ccffffff" />
</RelativeLayout>
